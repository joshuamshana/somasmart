{
  "name": "somasmart",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.json && vite build",
    "preview": "vite preview",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "format": "prettier -w .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ci": "vitest run --coverage",
    "test:journeys:sync-map": "node scripts/sync-e2e-requirements-map.mjs",
    "test:journeys:matrix": "node scripts/validate-coverage-matrix.mjs",
    "test:journeys:sync-map:backend": "node scripts/sync-requirements-map-backend.mjs",
    "test:journeys:matrix:backend": "node scripts/validate-coverage-matrix-backend.mjs",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "ci": "npm run typecheck && npm run test:coverage:ci && npm run test:journeys:matrix && npm run test:journeys:matrix:backend && npm run test:e2e -- --reporter=line",
    "api:dev": "npm --prefix apps/api run dev",
    "api:test": "npm --prefix apps/api run test",
    "api:build": "npm --prefix apps/api run build"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.7",
    "@hookform/resolvers": "^3.9.1",
    "@tanstack/react-query": "^5.64.2",
    "clsx": "^2.1.1",
    "dexie": "^4.0.10",
    "i18next": "^23.16.8",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^4.10.38",
    "pptx-preview": "^1.0.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.54.2",
    "react-i18next": "^14.1.3",
    "react-router-dom": "^6.29.0",
    "recharts": "^2.14.2",
    "vite-plugin-pwa": "^1.2.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.50.0",
    "@vitest/coverage-v8": "^2.1.9",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.10.10",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "fake-indexeddb": "^6.2.5",
    "jsdom": "^25.0.1",
    "msw": "^2.7.0",
    "playwright": "^1.50.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.19.1",
    "vite": "^5.4.11",
    "vitest": "^2.1.8"
  }
}
